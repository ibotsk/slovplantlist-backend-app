{
  "name": "genus",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "authors": {
      "type": "string",
      "required": true
    },
    "vernacular": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "family": {
      "type": "belongsTo",
      "model": "family",
      "foreignKey": "id_family"
    },
    "familyApg": {
      "type": "belongsTo",
      "model": "family_apg",
      "foreignKey": "id_family_apg"
    },
    "nomenclatures": {
      "type": "hasMany",
      "model": "nomenclature",
      "foreignKey": "id_genus"
    },
    "users": {
      "type": "hasMany",
      "model": "user_lb",
      "foreignKey": "id_genus",
      "through": "users_genera",
      "keyThrough": "id_user"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
